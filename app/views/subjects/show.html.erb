<% @page_title = "Show Subject" %>

<%= link_to('<< Back to List',{action:'index'},class:'btn btn-sm btn-dark') %>
<h2>Show Subjects</h2>

<div class="row">
	<table class="table" summary="Subjects detail view">
		<tr>
			<th>Name:</th>
			<td><%= @subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @subject.visible ? 'Yes' : 'No' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
</div>