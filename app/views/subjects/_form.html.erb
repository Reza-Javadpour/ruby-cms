
<div class="form-group row">
	<%= f.label(:name , class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10"><%= f.text_field(:name , class:'form-control') %></div>
</div>
<div class="form-group row">
	<%= f.label(:position, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.select(:position , 1..@subjects_count , class:'form-control') %>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:visible, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.check_box(:visible) %>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:created_at, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.datetime_select(:created_at, order:[:month, :day, :year]) %>
	</div>
</div>