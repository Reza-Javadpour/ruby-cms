<% @page_title = 'Show Page' %>

<%= link_to('<< Back to List',{action:'index'},class:'btn btn-sm btn-dark') %>
<h2>Show Page</h2>

<div class="row">

	<table class="table" summary="pages detail view">
		<tr>
			<th>Subject ID :</th>
			<td><%= @page.subject_id %></td>
		</tr>
		<tr>
			<th>Page Name :</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Perma Link :</th>
			<td><%= @page.permalink %></td>
		</tr>
		<tr>
			<th>Visible ?</th>
			<td><%= @page.visible ? 'Yes' : 'No'%></td>
		</tr>
		<tr>
			<th>Created :</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated :</th>
			<td><%= @page.updated_at %></td>
		</tr>

	</table>

</div>