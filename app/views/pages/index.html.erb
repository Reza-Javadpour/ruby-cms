<% @page_title = 'Pages list' %>

<h2>Pages</h2>
<div class="row">

	<%= link_to('Add new Page',{action:'new'},class:'btn btn-sm btn-primary') %>

	<table class="table">
		<tr>
			<th>&nbsp</th>
			<th>Subject</th>
			<th>Page</th>
			<th>Perma Link</th>
			<th>Visible?</th>
			<th>Action</th>
		</tr>

		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.subject.name if page.subject %></td>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td><%= status_tag(page.visible)%></td>
			<td>
				<%= link_to("Show",{action:'show',id:page.id},class:'btn btn-sm btn-success') %>
				<%= link_to("Edit",{action:'edit',id:page.id},class:'btn btn-sm btn-primary') %>
				<%= link_to("Delete",{action:'delete',id:page.id},class:'btn btn-sm btn-danger') %>	
			 </td>
		</tr>
		<% end %>
	</table>




</div>