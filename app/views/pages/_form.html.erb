<div class="form-group row">
	<%= f.label(:subject_id, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.select(:subject_id , @subjects.map { |s| [s.name, s.id]}, class:'form-control') %>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:page_name, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10"><%= f.text_field(:name , class:'form-control') %></div>
</div>
<div class="form-group row">
	<%= f.label(:position, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.select(:position , 1..@page_count , class:'form-control') %>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:visible, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.check_box(:visible) %>
	</div>
</div>
