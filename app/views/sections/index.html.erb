<% @page_title = "Sections" %>

<h2>Sections</h2>
<div class="row">
	<%= link_to("Add new Section",{action:'new'},class:'btn btn-primary') %>
	<table class="table">
		<tr>
			<th>&nbsp</th>
			<th>Page</th>
			<th>Section</th>
			<th>Content Type</th>
			<th>Visible?</th>
			<th>Action</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.page.name if section.page%></td>
			<td><%= section.name %></td>
			<td><%= section.content_type %></td>
			<td><%= status_tag(section.visible) %></td>
			<td>
				<%= link_to("Show",{action:'show',id:section.id},class:'btn btn-sm btn-success') %>
				<%= link_to("Edit",{action:'edit',id:section.id},class:'btn btn-sm btn-primary') %>
				<%= link_to("Delete",{action:'delete',id:section.id},class:'btn btn-sm btn-danger') %>
			</td>
		</tr>
		<% end %>
	</table>

</div>