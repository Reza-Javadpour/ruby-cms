<div class="form-group row">
	<%= f.label(:page_id, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.select(:page_id, @pages.map { |p| [p.name , p.id]} , class:'form-control') %> 
	</div>
</div>
<div class="form-group row">
	<%= f.label(:name, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10"><%= f.text_field(:name , class:'form-control') %></div>
</div>
<div class="form-group row">
	<%= f.label(:position, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.select(:position , 1..@sections_count, class:'form-control') %>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:visible, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<%= f.check_box(:visible) %> 
	</div>
</div>
<div class="form-group row">
	<%= f.label(:content_type, class:"col-sm-2 col-form-label") %>
	<div class="col-sm-10">
		<lable class="radio-inline">
			<%= f.radio_button(:content_type, "Text") %> Text
		</lable>
		<lable class="radio-inline">
			<%= f.radio_button(:content_type, "HTML") %> HTML
		</lable>
	</div>
</div>
<div class="form-group row">
	<%= f.label(:content, class:"col-sm-2 col-form-label") %>
	<%= f.text_area(:content, size:"10x5", class:"form-control") %>
</div>